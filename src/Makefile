clean:
	@echo "Cleaning..."
	@rm -f *.class
	@rm -f crdts/*.class
	@rm -f utils/*.class
	@rm -f backend/*.class
	@rm -f shopping/*.class
	@rm -f client/client1/*.class
	@rm -f client/client2/*.class
	@rm -f backend/server1/*.class
	@rm -f backend/server1/*.ser
	@rm -f backend/server2/*.class
	@rm -f backend/server2/*.ser
	@rm -f backend/server3/*.class
	@rm -f backend/server3/*.ser
	@rm -f backend/server4/*.class
	@rm -f backend/server4/*.ser
	@rm -f client1-db/*.ser
	@rm -f client2-db/*.ser

compile:
	@echo "Compiling classes..."
	@javac *.java
	@javac crdts/*.java
	@javac utils/*.java
	@javac backend/*.java
	@javac backend/server1/*.java
	@javac backend/server2/*.java
	@javac backend/server3/*.java
	@javac backend/server4/*.java
	@javac shopping/*.java
	@javac client/client1/*.java
	@javac client/client2/*.java

